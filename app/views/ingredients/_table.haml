- if ingredients && ingredients.size > 0
  %table.table
    %thead.thead-light
      %tr
        %th ID
        %th Name
        %th Composition
        %th Description
        %th Source
        %th Warning?
    %tbody
      - ingredients.each do |ingredient|
        %tr
          %td
            = ingredient.id
          %td
            = link_to ingredient.name, ingredient_path(ingredient)
          %td
            = ingredient.composition
          %td
            = ingredient.description
          %td
            = link_if_present(ingredient.source, 'Source', '')
          %td
            = ingredient.is_warning ? 'Yes' : 'No'
- else
  %p.lead No Ingredients Available


