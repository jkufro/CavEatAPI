- if nutrients && nutrients.size > 0
  %table.table
    %thead.thead-light
      %tr
        %th ID
        %th Name
        %th Description
        %th Source
        %th Unit
        %th Limiting?
    %tbody
      - nutrients.each do |nutrient|
        %tr
          %td
            = nutrient.id
          %td
            = link_to nutrient.name, nutrient_path(nutrient)
          %td
            = nutrient.description
          %td
            = link_if_present(nutrient.source, 'Source', '')
          %td
            = nutrient.unit
          %td
            = nutrient.is_limiting ? 'Yes' : 'No'
- else
  %p.lead No Nutrients Available


