- if foods && foods.size > 0
  %table.table
    %thead.thead-light
      %tr
        %th ID
        %th UPC
        %th Name
    %tbody
      - foods.each do |food|
        %tr
          %td
            = food.id
          %td
            = link_to food.upc, food_path(food)
          %td
            = food.name
- else
  %p.lead No Foods Available


