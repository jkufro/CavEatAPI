    %ul.navbar-nav
      - if current_user
        = nav_link('Foods', :foods)
        = nav_link('Ingredients', :ingredients)
        = nav_link('Nutrients', :nutrients)
        = nav_link('Users', :users)
        = nav_link('Requests', :string_requests)
        = nav_link('API', :swagger_ui_engine)
        = nav_link('Logout', :logout)
      - else
        = nav_link('Login', :login)
